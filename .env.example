# Candlecore Environment Configuration
# Copy this file to .env and fill in your values
# The .env file is gitignored and will never be committed

# ====================
# DATABASE SETTINGS
# ====================
CANDLECORE_DB_ENABLED=false
CANDLECORE_DB_HOST=localhost
CANDLECORE_DB_PORT=5432
CANDLECORE_DB_USER=candlecore
CANDLECORE_DB_PASSWORD=your_secure_password_here
CANDLECORE_DB_NAME=candlecore
CANDLECORE_DB_SSLMODE=disable
CANDLECORE_DB_ACCOUNT_ID=1

# ====================
# TRADING SETTINGS
# ====================
CANDLECORE_INITIAL_BALANCE=10000.0
CANDLECORE_TAKER_FEE=0.001
CANDLECORE_MAKER_FEE=0.0005
CANDLECORE_SLIPPAGE_BPS=5.0

# ====================
# DATA & STATE
# ====================
CANDLECORE_DATA_SOURCE=data/candles.csv
CANDLECORE_STATE_DIR=.state

# ====================
# LOGGING
# ====================
# Options: debug, info, warn, error
CANDLECORE_LOG_LEVEL=info

# ====================
# STRATEGY SETTINGS
# ====================
CANDLECORE_STRATEGY_NAME=simple_ma
CANDLECORE_STRATEGY_FAST_PERIOD=10
CANDLECORE_STRATEGY_SLOW_PERIOD=30
CANDLECORE_STRATEGY_POSITION_SIZE=1000.0

# ====================
# NOTES
# ====================
# - This is a template file. Copy to .env and customize.
# - .env files are automatically loaded on startup
# - Environment variables override config.yaml values
# - Keep .env file secure and never commit it to git
